<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/textviewTitle"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:textColor="@color/parpil"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:id="@+id/textviewFirst"
        android:layout_below="@+id/textviewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter first number"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#102ED6"
        />
    <EditText
        android:layout_below="@+id/textviewTitle"
        android:layout_toRightOf="@+id/textviewFirst"
        android:id="@+id/editTextFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="0"
        android:textSize="45sp"
        android:textColor="@color/green"

        />

    <TextView
        android:id="@+id/textviewSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textviewFirst"
        android:layout_marginTop="61dp"
        android:layout_marginRight="50dp"
        android:text="Enter Second number"
        android:textColor="#102ED6"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:layout_below="@+id/editTextFirst"
        android:layout_toRightOf="@+id/textviewSecond"
        android:id="@+id/editTextSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="0"
        android:textSize="45sp"
        android:textColor="@color/yellow"
        />

    <TextView
        android:id="@+id/textviewAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textviewSecond"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:layout_marginRight="50dp"
        android:text="Answer"
        android:textColor="@color/red"
        android:textSize="40sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btnAdd"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textviewAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="ADD"/>

    <Button
        android:id="@+id/btnSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAdd"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="SUB" />
    <Button
        android:id="@+id/btnMul"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textviewAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btnAdd"
        android:layout_marginLeft="155dp"
        android:text="MUL"/>

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnMul"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/btnSub"
        android:layout_marginLeft="155dp"
        android:text="DIV" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btnAdd"
        android:layout_marginLeft="27dp"
        android:layout_below="@+id/textviewAnswer"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:text="=" />


</RelativeLayout>

